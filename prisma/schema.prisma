// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User model
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  bio           String?   
  password      String?   // For email/password auth
  role          UserRole  @default(MEMBER)
  
  // NextAuth.js relationships
  accounts      Account[]
  sessions      Session[]
  
  // Your existing relationships
  projects      Project[]
  assignedTasks Task[]    @relation("TaskAssignee")
  notifications    Notification[]  // Add this
  sentActivities   Activity[]      @relation("ActivityCreator") // Add this
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// New Notification model
model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  link      String?          // Link to related resource
  read      Boolean          @default(false)
  
  // Related resources (optional)
  projectId String?
  taskId    String?
  
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime         @default(now())
  
  @@index([userId, read])
  @@index([createdAt])
}

// New Activity model (for activity feed)
model Activity {
  id          String       @id @default(cuid())
  type        ActivityType
  description String
  projectId   String?
  taskId      String?
  userId      String       // Who performed the action
  metadata    Json?        // Additional data
  
  user        User         @relation("ActivityCreator", fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime     @default(now())
  
  @@index([projectId])
  @@index([taskId])
  @@index([createdAt])
}

model Project {
  id          String        @id @default(cuid())
  title       String
  description String?
  coverImage  String?       // Project cover image
  imagePublicId String?     // Cloudinary public ID
  status      ProjectStatus @default(ACTIVE)
  priority    Priority      @default(MEDIUM)
  dueDate     DateTime?
  userId      String
  
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Task[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  priority    Priority   @default(MEDIUM)
  dueDate     DateTime?
  
  // Foreign keys
  projectId   String     // Which project this task belongs to
  assigneeId  String?    // Who's assigned to this task (optional)
  
  // Relationships
  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?      @relation("TaskAssignee", fields: [assigneeId], references: [id])
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Notification types enum
enum NotificationType {
  TASK_ASSIGNED
  TASK_STATUS_CHANGED
  TASK_COMMENT
  PROJECT_CREATED
  PROJECT_UPDATED
  MENTION
  TEAM_INVITE
}

// Activity types enum
enum ActivityType {
  PROJECT_CREATED
  PROJECT_UPDATED
  PROJECT_DELETED
  TASK_CREATED
  TASK_UPDATED
  TASK_DELETED
  TASK_STATUS_CHANGED
  TASK_ASSIGNED
  COMMENT_ADDED
  TEAM_MEMBER_ADDED
}

// Add user roles enum
enum UserRole {
  ADMIN
  MANAGER  
  MEMBER
}

// Add TaskStatus enum
enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
}

// Enums for project status and priority
enum ProjectStatus {
  ACTIVE
  COMPLETED
  ON_HOLD
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}